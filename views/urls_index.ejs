<!DOCTYPE html>
<html lang="en">
  <head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
  <link
      rel="stylesheet"
      href="https://stackpath.bootstrapcdn.com/bootstrap/4.2.1/css/bootstrap.min.css"
      crossorigin="anonymous"
    />
  <title>My URLs</title>
  </head>
  <body>
    <% include partials/_header %>
    <main style="margin: 1em;">
    <h3>My URLs</h3>
    <table class="table">
      <thead>
          <tr>
            <th>Short URL</th>
            <th>Long URL</th>
          </tr>
        </thead>
        <tbody>
          <% for (let id in urls) { %>
            <tr>
              <td><%= id %></td>
              <td><%= urls[id] %></td>
              <td> <form method="POST" action="/urls/<%= id %>/delete">
                <button type="submit" class="btn btn-danger btn-sm">Delete</button>
              </form>
            </td>
            </tr>
          <% } %>
        </tbody>
      </table>
      <a href="#">Create a New URL</a>
    </main>
  </body>
</html>
